pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/pandayash44-2711/jenkins-demo'
            }
        }
        stage('Build') {
            steps {
                echo "Building the app..."
            }
        }
        stage('Test') {
            steps {
                echo "Running tests..."
                // You can replace with 'pytest' or 'mvn test' later
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying the app..."
            }
        }
    }
}
